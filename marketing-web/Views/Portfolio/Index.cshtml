@model IEnumerable<Projects>
@{ 
    ViewData["Title"] = "Portfolio";
    ViewData["Menu"] = 1;
}

<div class="bg-white" style="padding: 150px 0px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 my-2">
                <h2 class="font-weight-bold">All of our work</h2>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-lg-4 mb-5">
                    <a asp-controller="Portfolio" asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none;">
                        <img src="@item.CoverPhoto" alt="@item.Name" class="img-fluid pb-2" />
                        <h4 class="mb-0 font-weight-bold text-dark">@item.Name</h4> <span class="text-secondary">@item.Category</span>
                    </a>

                </div>
            }

        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            AOS.init();
        });
    </script>
}